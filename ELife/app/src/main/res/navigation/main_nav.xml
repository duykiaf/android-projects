<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="t3h.android.elife.ui.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="t3h.android.elife.ui.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/topicsFragment"
        android:name="t3h.android.elife.ui.TopicsFragment"
        android:label="fragment_topics"
        tools:layout="@layout/fragment_topics" />
    <fragment
        android:id="@+id/bookmarksFragment"
        android:name="t3h.android.elife.ui.BookmarksFragment"
        android:label="fragment_bookmarks"
        tools:layout="@layout/fragment_bookmarks" />
    <fragment
        android:id="@+id/audioDetailsFragment"
        android:name="t3h.android.elife.ui.AudioDetailsFragment"
        android:label="fragment_audio_details"
        tools:layout="@layout/fragment_audio_details" />
</navigation>